#include <iostream>
using namespace std;

int main() {
    int n;
    
    while (true) {
        cout << "[ + ] Введите число: ";
        cin >> n;
        
        if (n == 0) {
            break;
        }
        
        if (n < 1 || n > 15) {
            cout << "Ошибка: число должно быть от 1 до 15" << endl;
            continue;
        }
        
        int i = 1;
        while (i <= n) {
            cout << "[ + ] Цикл отработал. Круг: " << i << "." << endl;
            i++;
        }
    }
    
    return 0;
}
